{
	"name": "weather-block",
	"version": "0.1.0",
	"description": "A comprehensive WordPress block for displaying weather information from OpenWeatherMap API.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --blocks-manifest",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --blocks-manifest",
		"test:unit": "wp-scripts test-unit-js",
		"test:e2e": "playwright test",
		"test:php": "phpunit",
		"test:php-coverage": "phpunit --coverage-html coverage",
		"lint:php": "phpcs",
		"lint:php-fix": "phpcbf",
		"analyze:php": "phpstan analyse --memory-limit=1G",
		"makepot": "wp i18n make-pot . languages/weather-block.pot --exclude=node_modules,vendor,tests,coverage",
		"makejson": "wp i18n make-json languages --no-purge",
		"i18n": "npm run makepot && npm run makejson",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:standalone": "playwright test tests/e2e/weather-block-standalone.spec.js",
		"playwright:install": "playwright install",
		"build:production": "npm run build && npm run i18n",
		"build:zip": "npm run build:production && wp-scripts plugin-zip",
		"clean": "rimraf build coverage test-results",
		"clean:all": "npm run clean && rimraf node_modules vendor",
		"validate": "npm run lint:js && npm run lint:css && npm run lint:php && npm run analyze:php",
		"test:all": "npm run test:unit && npm run test:php && npm run test:e2e:standalone",
		"prepare": "npm run build:production",
		"postversion": "npm run build:zip"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.0",
		"@testing-library/jest-dom": "^6.1.0",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.5.0",
		"@wordpress/scripts": "^30.20.0",
		"react": "^18.3.1",
		"rimraf": "^6.0.1"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^7.0.0",
		"@wordpress/components": "^28.0.0",
		"@wordpress/data": "^10.0.0",
		"@wordpress/element": "^6.0.0",
		"@wordpress/notices": "^5.0.0"
	}
}
